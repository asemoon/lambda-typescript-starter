{
  "name": "lambda-typescript-boilerplate",
  "version": "0.0.2",
  "author": "Mehdi Karamnejad",
  "license": "MIT",
  "description": "Boiler plate for lambda functions coded in typescript",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "clean": "cleandir ./build",
    "lint": "tslint --config tslint.json --project tsconfig.json --exclude **/node_modules/**",
    "local": "node ./build/utils/localStart",
    "test": "jest"
  },
  "jest": {
    "collectCoverage": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/test/.*)$",
    "testPathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "pre-commit": [
    "build",
    "lint"
  ],
  "devDependencies": {
    "@types/dotenv": "^4.0.3",
    "@types/jest": "^22.2.2",
    "@types/winston": "^2.3.9",
    "clean-dir": "^1.0.3",
    "jest": "^22.4.3",
    "pre-commit": "^1.2.2",
    "ts-jest": "^22.4.2",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1"
  },
  "engines": {
    "node": "~8.9.4",
    "npm": "~5.6.0"
  },
  "dependencies": {
    "@types/aws-lambda": "0.0.34",
    "dotenv": "^5.0.1",
    "winston": "^2.4.1"
  }
}
